# Open Floor Protocol Environment Configuration

# Application
APP_NAME=Open Floor Protocol
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ofp_db
POSTGRES_USER=ofp_user
POSTGRES_PASSWORD=ofp_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Floor Manager
FLOOR_TIMEOUT=30
FLOOR_MAX_HOLD_TIME=300
FLOOR_QUEUE_MAX_SIZE=100

# Envelope Router
ROUTER_MAX_RETRIES=3
ROUTER_TIMEOUT=10
ROUTER_QUEUE_SIZE=1000

# Agent Registry
REGISTRY_CLEANUP_INTERVAL=60
REGISTRY_HEARTBEAT_TIMEOUT=120
REGISTRY_MAX_AGENTS=1000

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_CREDENTIALS=true
